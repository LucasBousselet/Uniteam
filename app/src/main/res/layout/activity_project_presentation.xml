<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="unidev.uniteam.ProjectPresentation">

    <RelativeLayout
        android:id="@+id/activity_project_presentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/project_presentation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/project_name"
            android:textSize="20sp" />
        <!-- Mettre le nom du projet en cours -->

        <TextView
            android:id="@+id/anchorPresentationPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/buttonProjectTasks"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignEnd="@id/anchorPresentationPage"
            android:layout_alignRight="@id/anchorPresentationPage"
            android:layout_below="@id/project_presentation_name"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/task_button_legend"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_tasks" />

        <TextView
            android:id="@+id/legendTasksButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/buttonProjectTasks"
            android:layout_alignLeft="@id/buttonProjectTasks"
            android:layout_alignRight="@id/buttonProjectTasks"
            android:layout_alignStart="@id/buttonProjectTasks"
            android:layout_below="@id/buttonProjectTasks"
            android:gravity="center"
            android:text="@string/task_button_legend" />

        <ImageButton
            android:id="@+id/buttonProjectMeetings"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignLeft="@id/anchorPresentationPage"
            android:layout_alignStart="@id/anchorPresentationPage"
            android:layout_below="@id/project_presentation_name"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/meetings_button_legend"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/legendMeetingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/buttonProjectMeetings"
            android:layout_alignLeft="@id/buttonProjectMeetings"
            android:layout_alignRight="@id/buttonProjectMeetings"
            android:layout_alignStart="@id/buttonProjectMeetings"
            android:layout_below="@id/buttonProjectMeetings"
            android:gravity="center"
            android:text="@string/meetings_button_legend" />

        <ImageButton
            android:id="@+id/buttonProjectParticipants"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignEnd="@id/anchorPresentationPage"
            android:layout_alignRight="@id/anchorPresentationPage"
            android:layout_below="@id/legendTasksButton"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/participants_button_legend"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_participants" />

        <TextView
            android:id="@+id/legendParticipantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/buttonProjectParticipants"
            android:layout_alignLeft="@id/buttonProjectParticipants"
            android:layout_alignRight="@id/buttonProjectParticipants"
            android:layout_alignStart="@id/buttonProjectParticipants"
            android:layout_below="@id/buttonProjectParticipants"
            android:gravity="center"
            android:text="@string/participants_button_legend" />

        <ImageButton
            android:id="@+id/buttonProjectReports"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignLeft="@id/anchorPresentationPage"
            android:layout_alignStart="@id/anchorPresentationPage"
            android:layout_below="@id/legendMeetingsButton"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/reports_button_legend"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_reports" />

        <TextView
            android:id="@+id/legendReportsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonProjectReports"
            android:layout_alignLeft="@+id/buttonProjectReports"
            android:layout_alignRight="@+id/buttonProjectReports"
            android:layout_alignStart="@+id/buttonProjectReports"
            android:layout_below="@id/buttonProjectReports"
            android:gravity="center"
            android:text="@string/reports_button_legend" />

        <TextView
            android:id="@+id/project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/legendParticipantButton"
            android:layout_marginTop="25dp"
            android:text="@string/project_description" />

    </RelativeLayout>
</ScrollView>
