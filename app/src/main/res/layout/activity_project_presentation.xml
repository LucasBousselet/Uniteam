<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="unidev.uniteam.ProjectPresentation">

    <RelativeLayout
        android:id="@+id/activity_project_presentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/project_presentation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_name" />
        <!-- Mettre le nom du projet en cours -->

        <TextView
            android:id="@+id/anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/layoutProjectMeetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/anchor"
            android:layout_alignStart="@id/anchor"
            android:layout_below="@id/project_presentation_name"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonProjectMeetings"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/meeting_project_presentation"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meeting_project_presentation"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProjectParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/anchor"
            android:layout_alignRight="@id/anchor"
            android:layout_below="@id/layoutProjectMeetings"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonProjectParticipants"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/participant_project_presentation"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/people" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/participant_project_presentation"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProjectReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/anchor"
            android:layout_alignStart="@id/anchor"
            android:layout_below="@id/layoutProjectMeetings"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonProjectReports"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/report_project_presentation"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/notebook" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_project_presentation"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProjectTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layoutProjectMeetings"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/anchor"
            android:layout_toStartOf="@+id/anchor"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonProjectTasks"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/task_project_presentation"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tasks" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_project_presentation"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutProjectParticipants"
            android:layout_marginTop="25dp"
            android:text="@string/project_description" />

    </RelativeLayout>
</ScrollView>
